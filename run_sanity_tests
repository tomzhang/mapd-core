#!/bin/bash

result="success"
for test in Tests/PlanTest Tests/ExecuteTest Tests/StorageTest
do
	cd build && eval $test --gtest_output=xml:$(basename $test).xml
	if [ $? != 0 ]
	then
		result="fail"
	fi
	cd -
done
if [ $result == "fail" ]
then
	echo "--------- Sanity Tests Failed ---------."
	exit 1
else
	echo "+++++++++ Sanity Tests Passed +++++++++."
fi
